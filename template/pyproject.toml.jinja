# -*- mode: toml; -*-
#:schema https://json.schemastore.org/pyproject.json
# https://packaging.python.org/en/latest/specifications/pyproject-toml/

[build-system]
build-backend = "hatchling.build"
requires = ["hatch-vcs", "hatchling"]

[dependency-groups]
build = []
dev = []
docs = []

[project]
authors = [{ email = "{{ email }}", name = "{{ author }}" }]
classifiers = [
  # {% if license == "MIT" %}
  "License :: OSI Approved :: MIT License",
]
dependencies = []
description = "Add your description here"
dynamic = ["version"]
keywords = []
license = "{{ license }}"
name = "{{ name }}"
readme = "docs/README.md"
requires-python = ">=3.12"

[project.urls]
changelog = "https://github.com/{{ owner }}/{{ repo }}/blob/main/CHANGELOG.md"
documentation = "https://{{ owner }}.github.io/{{ repo }}/"
github = "https://github.com/{{ owner }}/{{ repo }}"
homepage = "https://github.com/{{ owner }}/{{ repo }}"
issues = "https://github.com/{{ owner }}/{{ repo }}/issues"
release-notes = "https://github.com/{{ owner }}/{{ repo }}/releases"

[tool.check-wheel-contents]
ignore = ["W002"]
[tool.hatch]

[tool.hatch.build.hooks.vcs]
# version-file = "TODO"

[tool.hatch.build.targets.sdist]
only-packages = true

[tool.hatch.build.targets.wheel]
# packages = ["TODO"]

[tool.hatch.version]
source = "vcs"

# {% if package_manager == "pixi" %}
[tool.pixi.environments]
default = { features = ["build", "dev", "docs"] }

[tool.pixi.project]
channel-priority = "disabled"
channels = ["conda-forge"]
platforms = ["linux-64"]

[tool.pixi.pypi-dependencies]
"{{ name }}" = { editable = true, path = "." }

[tool.pixi.system-requirements]
cuda = "12"
libc = { family = "glibc", version = "2.41" }
linux = "6.12"

# {% endif %}
